<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lzy.widget.CircleImageView
            android:id="@+id/item_video_headImg"
            android:src="@drawable/ic_bird"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_video_name"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:text="cmazxiaoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/item_video_publishTime"
                android:textSize="13sp"
                android:text="2017-07-07T12:14:57.685Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

        <TextView
            android:textSize="22sp"
            android:id="@+id/item_video_desc"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:text="九个神奇的磁力小道具九个神奇的磁力小道具九个神奇的磁力小道具九个神奇的磁力小道具九个神奇的磁力小道具"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/item_video_videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_love"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <TextView
                android:id="@+id/item_video_love"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="184"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_hate"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <TextView
                android:id="@+id/item_video_hate"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="184"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/item_video_share"
                android:background="@color/transparent"
                android:drawableStart="@drawable/ic_share"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>